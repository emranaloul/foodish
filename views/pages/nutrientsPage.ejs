<%- include('./layout/header')  %> 

<div class="parent">
    <!-- <img src="/imgSam/dawood.jpg" alt="" srcset=""> -->
<div class="form">
    <form action="/nutrition" method="post">
        <select name="searchBy" id="searchBy" class="input">
            <option value="maxCarbs">maxCarbs</option>
            <option value="minCarbs">minCarbs</option>
            <option value="minProtein">minProtein</option>
            <option value="maxProtein">maxProtein</option>
            <option value="maxCalories">maxCalories</option>
            <option value="maxFat">maxFat</option>
        </select>
        <input type="number"  name="value" placeholder="Enter value" id="value" >
        <button type="submit">Search</button>
    </form>
    </div>
    <div class="result">
        <% nutrients.forEach(element=>{ %>
            <div>
            <h3 class="h-3">
                <%= element.title %>
            </h3>
            <img src="<%= element.image%> " alt="" class="img-2">
            <section class="pi">
            <p>
                calories : <%= element.calories %>
            </p>
            <p>
                protein : <%= element.protein %>
    
            </p>
            <p>
                fat : <%= element.fat %>
            </p>
            <p>
                carbs : <%= element.carbs %>
            </p>
        </section>
            </div>
            <% }) %>
    </div>
</div>
</body>
</html>